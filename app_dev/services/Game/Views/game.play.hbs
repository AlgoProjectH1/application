<div class="container game-container">
    <div class="game-left">
        <div id="goban_container">
            <div id="goban" class="game-goban"></div>
            <div id="elements" class="{{ me.color }}"></div>
        </div>

        <div class="game-controls">
            <button class="rules" id="game-rules">Regles</button>
            <button class="giveup">Passer son tour</button>
            <button class="leave" id="game-quit">Quitter</button>
        </div>
    </div>

    <div class="game-right">
        <div class="game-box game-infos">
            <h3>Informations générales</h3>
            <div class="game-content">
                <div class="score" id="score-me" data-color="{{ me.color }}" data-turn="{{#if me.turn }}true{{ else }}false{{/if}}">
                    <h4>VOUS</h4>
                    <div class="stone"></div>
                </div>

                <div class="score scores">
                    <span class="time">03:00</span>
                    <h5>0</h5> <span class="score-separation">-</span> <h5>0</h5>
                </div>

                <div class="score right" id="score-adversary" data-color="{{ adversary.color }}" data-turn="{{#unless me.turn }}true{{ else }}false{{/unless}}">
                    <h4>{{ adversary.username }}</h4>
                    <div class="stone"></div>
                </div>

                <div class="clear"></div>
            </div>
        </div>

        <div class="game-box game-history">
            <h3>Déroulement de la partie</h3>
            <div class="game-content"></div>
        </div>
    </div>
</div>
