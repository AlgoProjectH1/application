<section class="looking-game">
    <div id="looking-cancel" class="looking-cancel">Annuler</div>

    <div class="player player-left">
        <div class="line"></div>
        <img src="http://gravatar.com/avatar/{{ user.picture }}?s=50">
        <div class="infos">
            <h3>{{ user.username }}</h3>
            <span>{{ user.rankName }}</span>
        </div>
    </div>
    <div class="player player-right">
        <div class="line"></div>

        <div class="player-swipe" id="player_0">
            <img src="resources/images/david_avatar.png">
            <div class="infos">
                <h3>David</h3>
                <span>Débutant</span>
            </div>
        </div>
        <div class="player-swipe" id="player_1">
            <img src="resources/images/nicolas_avatar.png">
            <div class="infos">
                <h3>Nicolas</h3>
                <span>Débutant</span>
            </div>
        </div>
        <div class="player-swipe" id="player_2">
            <img src="resources/images/benjamin_avatar.png">
            <div class="infos">
                <h3>Benjamin</h3>
                <span>Débutant</span>
            </div>
        </div>
    </div>

    <div class="loading-anim"></div>
    <h2 class="loading-title">Recherche de joueurs...</h2>
</section>
